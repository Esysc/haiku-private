SubDir HAIKU_TOP src add-ons kernel drivers graphics radeon_hd ;

SetSubDirSupportedPlatformsBeOSCompatible ;

UseHeaders [ FDirName $(HAIKU_TOP) src add-ons kernel bus_managers acpi acpica include ] : true ;
UseHeaders [ FDirName $(HAIKU_TOP) src add-ons accelerants radeon_hd atombios ] ;
UsePrivateHeaders [ FDirName graphics radeon_hd ] ;
UsePrivateHeaders [ FDirName graphics common ] ;
UsePrivateHeaders graphics kernel ;
UsePrivateHeaders shared ;
UsePrivateKernelHeaders ;

KernelAddon radeon_hd :
	driver.cpp
	device.cpp
	radeon_hd.cpp
	sensors.cpp
	: libgraphicscommon.a
;

SEARCH on [ FGristFiles
		kernel_cpp.cpp
	] = [ FDirName $(HAIKU_TOP) src system kernel util ] ;
